extends ../app

block variables
  - var sidebarActive = 1

block content
  .services-page.connected-page
    .panel
      a.panel__link(href="#") 
        .panel__icon 
          +arrow-left-svg.panel__svg 
        .panel__label 
          |Услуги
      .panel__text 
        |Подключенные
    section.section.section--first-panel(data-real-tabs='')
      .container
        .sections
          .sections__list 
            .sections__tab.active(data-tabs-item='')
              |Мои опции
            .sections__tab(data-tabs-item='') 
              |Доступные опции
        .services-page__inner 
          .services-page__block.active(data-tabs-block='')
            .connected-page__container 
              .connected-page__top
                .connected-page__top-col
                  .connected-page__icon 
                    +tv-svg.connected-page__svg 
                .connected-page__top-col.tooltip
                  .connected-page__contract(data-tooltip-icon='')
                    .connected-page__contract-icon
                      +contract-svg.connected-page__contract-svg 
                    .connected-page__contract-text 
                      |0987654321
                  .tooltip__container 
                    |Договор
                  .connected-page__top-label
                    .label
                      |Активна
              .connected-page__head
                .connected-page__head-col
                  h3.section__title 
                    |Телевидение
                .connected-page__head-col
                  .section__label.default
                    |Оплата включена в квитанцию ЖКУ
              .connected-page__inner 
                .connected-page__row
                  .connected-page__row-col
                    .services-page__card-label 
                      |Тариф
                    .tooltip
                      .connected-page__heading.underline
                        |Пакет «Базовый» индивидуальный договор»
                        span.tooltip__icon(data-tooltip-icon='')
                          +tooltip-svg.tooltip__svg 
                      span.label.inline.inline--mobile
                        |Подключен
                      .tooltip__container 
                        |Число месяца, при наступлении которого счёт будет автоматически пополняться
                  .connected-page__row-col
                    .connected-page__row-item 
                      .services-page__card-label 
                        |Стоимость
                      .connected-page__text 
                        |220 ₽/мес
                    .connected-page__row-item.only-mobile
                      .section__label.default
                        |Оплата включена в квитанцию ЖКУ
                    .connected-page__row-item 
                      .services-page__card-label 
                        |Дата подключения
                      .connected-page__text 
                        |31.01.22 
              .connected-page__inner
                .connected-page__row.alt
                  .connected-page__row-col
                    .connected-page__btn
                      button.button.button--outline.button--small
                        |Частотный план
                  .connected-page__row-col
                    .connected-page__btn.small
                      button.button.button--outline.button--small
                        |Расходы
              .connected-page__block 
                .connected-page__icon 
                  +tv-svg.connected-page__svg 
                .connected-page__inner
                  h3.section__title 
                    |Дополнительные пакеты ЦТВ
                .connected-page__inner
                  - for (j = 0; j < 4; j++)
                    .accordion(data-accordion='')
                      .accordion__top(data-accordion-button='')
                        .accordion__title 
                          |CAM-модуль 123456789
                          span.label.inline
                            |Подключен
                        .accordion__icon 
                          +arrow-svg.accordion__svg
                      .accordion__body(data-accordion-dropdown='')
                        .connected-page__inner 
                          .connected-page__accordion-grid
                            - for (i = 0; i < 4; i++)
                              .connected-page__accordion-item(class=(i === 1 ? 'border' : null))
                                .services-page__card-label 
                                  |Название пакета
                                .connected-page__text 
                                  |Настрой Кино
                          .connected-page__inner
                            .connected-page__buttons
                              .connected-page__buttons-item
                                button.button.button--outline.button--small(data-fancy-button='modules')
                                  |Редактировать
                              .connected-page__buttons-item.small
                                button.button.button--outline.button--small
                                  |Опции
                        .connected-page__inner 
                          .services-page__card-label 
                            |Оборудование
                          .connected-page__text 
                            |Verimatrix
                        .connected-page__inner
                          .connected-page__grid 
                            .connected-page__grid-item 
                              .services-page__card-label 
                                |Тариф
                              .connected-page__text
                                |В аренде
                              a.connected-page__link(href="#")
                                |Выкуп оборудования
                            .connected-page__grid-item 
                              .services-page__card-label 
                                |Стоимость
                              .connected-page__text 
                                |220 ₽/мес
                            .connected-page__grid-item 
                              .services-page__card-label 
                                |Стоимость
                              .connected-page__text 
                                |220 ₽/мес
              .connected-page__block 
                .connected-page__icon 
                  +tv-svg.connected-page__svg 
                .connected-page__inner
                  h3.section__title 
                    |Онлайн ТВ «iPakt»
                .connected-page__inner
                  .connected-page__accordion-grid.small
                    - for (i = 0; i < 4; i++)
                      .connected-page__accordion-item(class=(i === 1 ? 'border' : null))
                        .services-page__card-label 
                          |Название пакета
                        .connected-page__text 
                          |Дождь
                .connected-page__inner 
                  .connected-page__btn
                    button.button.button--outline.button--small
                      |Редактировать
          .services-page__block(data-tabs-block='')
            //- h3.section__title 
              |Специальные акции и предложения
            .services-page__categories 
              .categories
                each item, i in ['Все (6)', 'Интернет (1)', 'Телевидение (4)',  ]
                  .categories__item 
                    .categories__btn(class=(i===0 ? 'active' : null))
                      |#{item}
            .connected-page__inner
              .services-page__item-heading 
                |Специальные предложения 
            .services-page__offer
              .services-page__offer-container
                .services-page__offer-title 
                  |Онлайн ТВ «iPakt» на 5 устройствах
                .services-page__offer-text 
                  |Вам доступен сервис онлайн ТВ «iPakt» на 5 устройстсвах. Пакет "Популярный"     
                .services-page__offer-btn 
                  button.button.button--black(data-fancy-button='service')
                    |Подключить
                a.services-page__offer-link(href="#") 
                  |Подробнее об опции на сайте
            .services-page__list 
              .services-page__item
                .services-page__item-heading 
                  |Тарифы
                .services-page__item-grid 
                  - for (i = 0; i < 6; i++)
                    .services-page__card
                      .services-page__card-container
                        .services-page__card-top
                          .services-page__card-heading.underline
                            |2 Мбит
                          .services-page__card-body 
                            .services-page__card-list 
                              .services-page__card-item 
                                .services-page__card-label 
                                  |Скорость
                                .services-page__card-text 
                                  |2 Мбит/с
                        .services-page__card-bot 
                          .services-page__card-price 
                            |150 ₽/мес 
                          .services-page__card-btn 
                            |Подключить
                  
  +modules-modal(title = 'Дополнительные модули' isTv = true)
  +service-modal