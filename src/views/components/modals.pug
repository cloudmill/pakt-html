    .change-modal__container(data-response-container='')
      .modal__title 
        |Изменить адрес email
      form.change-modal__form(action="/" data-form='change-email')
        +input(type = 'email' placeholder = 'Эл. почта')
        .change-modal__btns.change-modal__inner
          .change-modal__item 
            button.button
              |Продолжить
          .change-modal__item 
            .button.button--outline(data-fancybox-close='')
              |Отменить
